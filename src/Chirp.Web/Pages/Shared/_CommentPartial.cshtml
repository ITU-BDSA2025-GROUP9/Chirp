@using Chirp.Core
@using Microsoft.AspNetCore.Identity
@model IEnumerable<Chirp.Core.DTO.CommentDTO>
@inject UserManager<Author> UserManager

<div class="comments">
    @foreach (var c in Model)
    {
        <div class="comment">
            <div class="comment-inner">

                <img src="@(c.AuthorProfileImage ?? "/images/bird1-profile.png")"
                     class="profilepicture" alt="" />

                <div class="comment-body">

                    <div class="comment-header">
                        <strong>@c.AuthorName</strong>
                    </div>

                    <div class="comment-text">
                        <p>@c.Content</p>
                    </div>

                    <div class="comment-footer">
                        <span class="timestamp">@c.CreatedAt.ToLocalTime()</span>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            var uid = UserManager.GetUserId(User);
                            if (uid == c.AuthorId.ToString())
                            {
                                <form method="post" asp-page-handler="DeleteComment">
                                    <input type="hidden" name="CommentId" value="@c.Id" />
                                    <button type="submit">Delete</button>
                                </form>
                            }
                        }
                    </div>

                </div>
            </div>
        </div>
    }
</div>
