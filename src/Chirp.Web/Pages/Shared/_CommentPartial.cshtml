@using Chirp.Core
@using Microsoft.AspNetCore.Identity
@model IEnumerable<Chirp.Core.DTO.CommentDTO>
@inject UserManager<Author> UserManager

<div class="comments">
    @foreach (var c in Model)
    {
        <div class="comment">
            <div class="comment-inner">

                <img src="@(c.Author.ProfileImage ?? "/images/bird1-profile.png")"
                     class="profilepicture" alt="" />

                <div class="comment-body">

                    <div class="comment-header">
                        <strong>@c.Author.Name</strong>
                    </div>

                    <div class="comment-text">
                        <p>@c.Content</p>
                    </div>

                    <div class="comment-footer">
                        <span class="timestamp">@c.CreatedAt</span>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            if (c.Author.Name == User.Identity!.Name)
                            {
                                <form class="delete-form" method="post" asp-page-handler="DeleteComment"
                                      onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                    <input type="hidden" name="CommentId" value="@c.Id"/>
                                    <button class="deletebtn" type="submit">Delete</button>
                                </form>
                            }
                        }
                    </div>

                </div>
            </div>
        </div>
    }
</div>
