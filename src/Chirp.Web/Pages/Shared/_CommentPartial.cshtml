@using Chirp.Core
@using Microsoft.AspNetCore.Identity
@model IEnumerable<Chirp.Core.DTO.CommentDTO>
@inject UserManager<Author> UserManager

<div class="comments">
    @foreach (var c in Model)
    {
        <div class="comment">
            <img src="~/images/@(c.AuthorProfileImage ?? "bird1-profile.png")"
                 class="profile-img-sm" alt="Profile" />

            <div class="comment-body">
                <strong>@c.AuthorName</strong>
                <p>@c.Content</p>
                <span class="timestamp">@c.CreatedAt.ToLocalTime()</span>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    var uid = UserManager.GetUserId(User);
                    if (uid == c.AuthorId.ToString())
                    {
                        <form method="post" asp-page-handler="DeleteComment" style="margin-top:4px;">
                            <input type="hidden" name="CommentId" value="@c.Id" />
                            <button type="submit">Delete</button>
                        </form>
                    }
                }
            </div>
        </div>
    }
</div>