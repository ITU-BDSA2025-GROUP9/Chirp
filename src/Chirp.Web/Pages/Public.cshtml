@page "/"
@using Chirp.Web.Pages.Shared
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2>Public Timeline</h2>
    @{ await Html.RenderPartialAsync("Shared/_PostPartial", Model.Input);}

    @if (Model.Cheeps.Any()) {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps) {
                <li>
                    <div class="followcontainer">
                        <img class="profilepicture" src="@cheep.Author.ProfileImage">
                        
                        <strong>
                            <a href="/@cheep.Author.Name">@cheep.Author.Name</a>
                        </strong>
                        @{
                            await Html.RenderPartialAsync("Shared/_FollowPartial",
                                new FollowButtonViewModel(cheep.CheepId, cheep.Author.Name, await Model.IsFollowing(cheep.Author.Name)));
                        }
                    </div>
                    @cheep.Message
                    <small>&mdash; @cheep.TimeStamp</small>
                  
                </li>
            }
        </ul>

        @* Next and previous page button *@
        <div class="pagination">
            @if (Model.CurrentPage > 1) {
                <a class="btn" href="/?page=@(Model.CurrentPage - 1)"> <button> Previous </button> </a>
            }
            
            @if (Model.HasNextPage){
                <a class="btn" href="/?page=@(Model.CurrentPage + 1)"> <button> Next </button> </a>
            }
        </div>
    }
    else {
        @if (Model.CurrentPage > 1) {
            <em> No cheeps on current pagenumber: @(Model.CurrentPage) </em>

            <br>
            <br>
            <a class="btn" href="/?page=@(Model.CurrentPage - 1)"> <button> Previous </button> </a>
        }
        else {
            <em> There are no cheeps so far.</em>
        }
    }
</div>